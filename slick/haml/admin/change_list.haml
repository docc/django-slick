- extends "admin/base.html"
- load admin_list i18n admin_urls

- block javascripts
	{{ block.super }}
	:javascript
		(function($) {
			$(document).ready(function() {
				slick.initFilter();
			});
		})(slk.jQuery);

- block breadcrumbs
	- if not is_popup
		%li.breadcrumb-item
			%a{:href => "{% url 'admin:app_list' app_label=cl.opts.app_label %}"}
				{{cl.opts.app_config.verbose_name}}
		%li.breadcrumb-item
			%a{:href => "{% url 'admin:app_list' app_label=cl.opts.app_label %}"} 
				{{ cl.opts.verbose_name_plural|capfirst }}

- block page_title
	%li
		{{ title|capfirst }}

- block object-tools-items
	- if has_add_permission
		%li
			%a.btn.btn-primary.btn{:href => "{% url cl.opts|admin_urlname:'add' %}"}
				{% blocktrans with cl.opts.verbose_name|capfirst as name %}Add {{ name }}{% endblocktrans %}

- block content
	.row
		- block result_list
			.col-md-12
				{% if action_form and actions_on_top and cl.show_admin_actions %}{% admin_actions %}{% endif %}
				.card
					.card-heading
						{{ cl.opts.verbose_name_plural|capfirst }}

					.card-body
						.row
							.col-lg-12
								- block search
									- search_form cl
						.row-fluid.slk-filter.margin-top-10
							- if cl.has_filters
								{% for spec in cl.filter_specs %}
								
									{% admin_list_filter cl spec %}
								{% endfor %}
						
						- result_list cl
					
					{% if action_form and actions_on_bottom and cl.show_admin_actions %}{% admin_actions %}{% endif %}
