- load slick_tags

- if field.is_checkbox
	.checkbox
		%label
			{{ field.field }} {{ field.label_tag }}
		- if field.field.help_text
			%span.help-block
				{{ field.field.help_text|safe }}
- elif field.is_select
	hoi
- else
	.form-group{:class => "{% if not field.is_readonly and field.errors %}has-error{% endif %}"}
		- if show_label != False
			{{ field.label_tag }}

		- if field.is_readonly
			<p>{{ field.contents }}</p>
		- else
			{{ field.field|render_field:"class:form-control" }}

			- if field.errors
				%span.text-danger
					{{ field.errors|striptags }}

		- if field.field.help_text
			%span.help-block
				{{ field.field.help_text|safe }}
